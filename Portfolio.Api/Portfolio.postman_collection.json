        {
            "name": "Upload",
            "item": [
                {
                    "name": "Upload Image",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": ""
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/Upload/image?folder=projects",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "Upload",
                                "image"
                            ],
                            "query": [
                                {
                                    "key": "folder",
                                    "value": "projects"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ]
