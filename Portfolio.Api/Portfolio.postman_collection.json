{
    "info": {
        "name": "Portfolio API",
        "description": "Complete API collection for Portfolio Backend",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "https://localhost:5001/api",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"Admin@123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/Auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "Auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Skills",
            "item": [
                {
                    "name": "Get All Skills",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/Skills",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "Skills"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Skill By ID",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/Skills/1",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "Skills",
                                "1"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Skill",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"nameAr\": \"React\",\n  \"nameEn\": \"React\",\n  \"proficiency\": 85,\n  \"iconUrl\": \"/images/skills/react.png\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/Skills",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "Skills"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Skill",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"nameAr\": \"React Updated\",\n  \"nameEn\": \"React Updated\",\n  \"proficiency\": 90,\n  \"iconUrl\": \"/images/skills/react.png\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/Skills/1",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "Skills",
                                "1"
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Skill",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/Skills/1",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "Skills",
                                "1"
                            ]
                        }
                    }
                }
            ]
        },
        {
